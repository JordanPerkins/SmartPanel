    <div class="panel-body">
        <h3 class="title-hero">
            Virtual Servers
        </h3>
        <div class="example-box-wrapper">
        <ul>
        {% for server in servers %}
        <li><a href="/admin/servers/{{ server.id }}">#{{ server. id }} - {{ server.hostname }}</li>
        {% endfor %}
        </ul>
        </div>
        </div>
        </div>

</div>
</div>
</div>


