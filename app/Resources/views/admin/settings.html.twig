               <li><a data-toggle="tab" href="#logging">Logging</a></li>
             </ul>
           </div>
           <div class="widget-content tab-content">
             <div id="general" class="tab-pane active">
             <div class="row-fluid">
               <div class="span6">
                 <div class="widget-box">
                   <div class="widget-title"> <span class="icon"> <i class="icon-tag"></i> </span>
                     <h5>Branding</h5>
                   </div>
                   <div class="widget-content"> Make branding customizations below.<hr>
                   <label>Company name:</label> {{ form_widget(form.company_name) }}
                   <label>Email from:</label> {{ form_widget(form.email_from) }}
                   <label>Client Area Link:</label> {{ form_widget(form.clientarea_link) }}
                   <label>Panel Location:</label> {{ form_widget(form.panel_location) }}
                   <label>Welcome notification:</label> {{ form_widget(form.welcome_notification) }}
                   </div>
                 </div>
               </div>
               <div class="span6">
                 <div class="widget-box">
                   <div class="widget-title"> <span class="icon"> <i class="icon-list"></i> </span>
