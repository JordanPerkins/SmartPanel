<div class="container-fluid">
  <hr>
  {% if form_errors(form) %}
  <div class="alert alert-error">
  <button class="close" data-dismiss="alert">x</button>
  <strong>Error!</strong> {{ form_errors(form) }} </div>
  {{ include('notify.html.twig', { 'title': "Error", 'text': "The settings could not be updated.", image: "/img/cross.png" }) }}
  {% elseif submitted %}
  {{ include('notify.html.twig', { 'title': "Success", 'text': "The settings have been updated successfully.", image: "/img/tick.png" }) }}
  {% endif %}
  {{ form_start(form) }}
  <div class="widget-box">
           <div class="widget-title">
             <ul class="nav nav-tabs">
               <li class="active"><a data-toggle="tab" href="#general">General</a></li>
