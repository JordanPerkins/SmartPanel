{{ include('header.html.twig', { 'page_title': page_title, 'page_id': 2 }) }}
<div id="content">
<div id="content-header">
  <div id="breadcrumb"> <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="profile" class="tip-bottom">Profile</a> <a href="#" class="tip-bottom">Change Password</a> </div>
  <h1>Change Password</h1>
</div>
<div class="container-fluid">
  <hr>
  {% if form_errors(form) %}
  <div class="alert alert-error">
  <button class="close" data-dismiss="alert">x</button>
  <strong>Error!</strong> {{ form_errors(form) }} </div>
  {{ include('notify.html.twig', { 'title': "Error", 'text': "Your password could not be updated.", image: "img/demo/envelope.png" }) }}
  {% elseif submitted %}
  {{ include('notify.html.twig', { 'title': "Success", 'text': "Your password has been updated successfully.", image: "img/demo/envelope.png" }) }}
  {% else %}
    <p>Passwords should be 8 characters long and must contain at least one uppercase letter, lowercase letter and number.</p>
  {% endif %}
  <div class="row-fluid">
    <div class="span6">
    <div class="widget-box">
    <div class="widget-title"> <span class="icon"> <i class="icon-user"></i> </span>
<h5>Change Password</h5>
</div>
<div class="widget-content nopadding">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<div class="control-group">
<label class="control-label">Current Password: </label>
<div class="controls">
  {{ form_widget(form.password) }}
</div>
</div>
<div class="control-group">
<label class="control-label">New Password:</label>
<div class="controls">
    {{ form_widget(form.newpassword) }}
</div>
</div>
<div class="control-group">
<label class="control-label">Verify Password:</label>
<div class="controls">
  {{ form_widget(form.verifypassword) }}
</div>
</div>
<div class="form-actions">
{{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
</div>
{{ form_end(form) }}
</div>
</div>
      </div>
      <div class="span6">
        </div>
      </div>
      </div></div>

