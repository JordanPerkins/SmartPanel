{{ include('header.html.twig', { 'page_title': page_title, 'page_id': 2, 'link': settings.clientarea_link }) }}
<div id="page-content-wrapper">
        <div id="page-content">

                <div class="container">


<!-- Parsley -->

<script type="text/javascript" src="{{ asset('assets/widgets/parsley/parsley.js') }}"></script>

<div id="page-title">
<h2>My Profile</h2>
<p>Change your account settings.</p>
</div>

<div class="panel">
<div class="panel-body">
    <h3 class="title-hero">
        Change Password
    </h3>
    <div class="example-box-wrapper">
    {% if form_errors(form) %}
    <div class="alert alert-danger">
   <div class="bg-red alert-icon">
       <i class="glyph-icon icon-times"></i>
   </div>
      <div class="alert-content">
      <h4 class="alert-title">Error</h4>
      <p>{{ form_errors(form) }}</p>
      </div>
</div>
  {% endif %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal bordered-row', 'data-parsley-validate': ''}}) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Current Password</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">New Password</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.newpassword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Verify Password</label>
                        <div class="col-sm-6">
                        {{ form_widget(form.verifypassword, {'attr': {'data-parsley-equalto': '#form_newpassword', 'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <a href="/profile" class="btn btn-alt btn-hover btn-primary">
                    <span>Change Profile</span>
                    <i class="glyph-icon icon-arrow-right"></i>
                    </a>
                </div>
                    </div>
                </div>
            </div>
            <div class="bg-default content-box text-center pad20A mrg25T">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
            {{ form_end(form) }}
            </div>
    </div>
</div>
</div>
                </div>



        </div>
    </div>
</div>

{{ include('footer.html.twig') }}
