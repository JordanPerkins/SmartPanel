{{ include('header.html.twig', { 'page_title': page_title, 'page_id': 2 }) }}
<div id="content">
<div id="content-header">
  <div id="breadcrumb"> <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Profile</a> </div>
  <h1>My Profile</h1>
</div>
<div class="container-fluid">
  <hr>
  {% if form_errors(form) %}
  <div class="alert alert-error">
  <button class="close" data-dismiss="alert">x</button>
  <strong>Error!</strong> {{ form_errors(form) }} </div>
  {{ include('notify.html.twig', { 'title': "Error", 'text': "Your profile could not be updated.", image: "img/demo/envelope.png" }) }}
  {% elseif submitted %}
  {{ include('notify.html.twig', { 'title': "Success", 'text': "Your profile has been updated successfully.", image: "img/demo/envelope.png" }) }}
  {% endif %}
  <div class="row-fluid">
    <div class="span6">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-user"></i> </span>
          <h5>My Profile</h5>
        </div>
        <div class="widget-content nopadding">
          	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="control-group">
              <label class="control-label">Username: </label>
              <div class="controls">
                <input type="text" class="span11" value="{{app.user.username}}" readonly/>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">First Name:</label>
              <div class="controls">
		            {{ form_widget(form.firstname) }}
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Last Name:</label>
              <div class="controls">
		            {{ form_widget(form.surname) }}
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Email Address:</label>
              <div class="controls">
		            {{ form_widget(form.email) }}
              </div>
            </div>
            <div class="form-actions">
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
      </div>
      </div>
      <div class="span6">
        <ul class="quick-actions">
          <li class="bg_lb"> <a href="password"> <i class="icon-key"></i> Change Password </a> </li>
        </ul>
      </div>
      </div>
      </div></div>

{{ include('footer.html.twig') }}
