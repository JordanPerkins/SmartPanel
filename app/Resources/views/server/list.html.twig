{{ include('header.html.twig', { 'page_title': page_title, 'page_id': 3 }) }}
<div id="content">
<div id="content-header">
  <div id="breadcrumb"> <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Virtual Servers</a> </div>
  <h1>My Servers</h1>
</div>
<div class="container-fluid">
  <hr>

<div class="widget-box">
  <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
    <h5>Server List</h5>
  </div>
  <div class="widget-content nopadding">
    <table class="table table-bordered data-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Hostname</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        {% for server in servers %}
        <tr>
          <td>{{ server.id}}</td>
          <td>{{ server.hostname }}</td>
          <td>{{ server.type }}</td>
        </tr>
      </tbody>
        {% endfor %}
    </table>
      </div>
    </div>
    </div>
</div>

